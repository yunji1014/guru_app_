<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Custom RatingBar style -->
    <style name="CustomRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/colorRatingBar</item>
        <item name="colorControlActivated">@color/colorRatingBarActivated</item>
        <item name="colorControlHighlight">@color/colorRatingBarHighlight</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:textColor">#000000</item>
    </style>



</resources>